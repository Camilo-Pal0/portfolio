      <SocialPill href="https://www.linkedin.com/in/camilo-palomeque-2b25322ba/">
        <LinkedInIcon class="size-6"/> LinkedIn
      </SocialPill>
      <SocialPill href="https://github.com/Camilo-Pal0">
        <GitHubIcon class="size-6"/> GitHub
      </SocialPill>
      <SocialPill href="mailto:camilopalomeque79@gmail.com">
        <MailIcon class="size-6"/> Camilopalomeque79@gmail.com
